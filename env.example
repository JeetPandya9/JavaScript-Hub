# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,.herokuapp.com,.railway.app,.vercel.app

# Database (for production)
DATABASE_URL=postgresql://username:password@host:port/database_name

# Social Authentication (Optional)
GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret
GOOGLE_OAUTH2_REDIRECT_URI=https://your-domain.com/auth/google/callback/

GITHUB_OAUTH2_CLIENT_ID=your-github-client-id
GITHUB_OAUTH2_CLIENT_SECRET=your-github-client-secret
GITHUB_OAUTH2_REDIRECT_URI=https://your-domain.com/auth/github/callback/

# Security
CSRF_TRUSTED_ORIGINS=https://your-domain.com
